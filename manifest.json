{
  "name": "Chrome Facebook Scraper",
  "version": "0.0.0",
  "description": "Chrome plugin to scrape Facebook public posts",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "./src/js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "./src/html/popup.html",
    "default_icon": {
      "16": "src/img/get_started16.png",
      "32": "src/img/get_started32.png",
      "48": "src/img/get_started48.png",
      "128": "src/img/get_started128.png"
    }
  },
  "icons": {
    "16": "src/img/get_started16.png",
    "32": "src/img/get_started32.png",
    "48": "src/img/get_started48.png",
    "128": "src/img/get_started128.png"
  },
  "manifest_version": 2
}
