{
  "name": "Chrome Facebook Scraper",
  "version": "0.0.0",
  "description": "Chrome plugin to scrape Facebook public posts",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage",
    "*://*.ondemand.crisp/service.svc/json/session/*",
    "*://dev-rmf-od/rmf/v2/SubmitUgc",
    "*://www.facebook.com/*"
  ],
  "background": {
    "page": "./src/html/background.html",
    "persistent": false
  },
  "page_action": {
    "default_popup": "./src/html/popup.html",
    "default_icon": {
      "16": "src/img/icon-black.png",
      "32": "src/img/icon-black.png",
      "48": "src/img/icon-black.png",
      "128": "src/img/icon-black.png"
    }
  },
  "icons": {
    "16": "src/img/icon-black.png",
    "32": "src/img/icon-black.png",
    "48": "src/img/icon-black.png",
    "128": "src/img/icon-black.png"
  },
  "options_page": "./src/html/options.html",
  "manifest_version": 2
}
